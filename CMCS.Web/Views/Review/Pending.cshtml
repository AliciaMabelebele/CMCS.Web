@model List<CMCS.Web.Models.Claim>
@{
    ViewData["Title"] = "Pending Claims";
}

<div class="container-fluid mt-4 mb-5">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold">
                <i class="bi bi-hourglass-split me-2"></i>Pending Claims Review
            </h2>
            <p class="text-muted">Review and approve/reject pending claims</p>
        </div>
        <div class="col-auto">
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Department</th>
                                <th>Submitted</th>
                                <th>Hours</th>
                                <th>Amount</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">#@claim.ClaimId</td>
                                    <td>@claim.Lecturer?.FullName</td>
                                    <td>@claim.Lecturer?.Department</td>
                                    <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                                    <td>@claim.HoursWorked</td>
                                    <td class="fw-bold">R @claim.TotalAmount.ToString("N2")</td>
                                    <td>
                                        <a asp-controller="Claim" asp-action="Details" asp-route-id="@claim.ClaimId"
                                           class="btn btn-sm btn-primary">
                                            <i class="bi bi-eye me-1"></i>Review
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-check-circle display-1 text-success"></i>
                    <p class="text-muted mt-3">No pending claims to review!</p>
                </div>
            }
        </div>
    </div>
</div>