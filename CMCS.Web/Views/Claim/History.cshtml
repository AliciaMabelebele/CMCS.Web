@model CMCS.Web.Models.ViewModels.ClaimListViewModel
@{
    ViewData["Title"] = "Claim History";
}

<div class="container-fluid mt-4 mb-5">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold">
                <i class="bi bi-clock-history me-2"></i>My Claim History
            </h2>
            <p class="text-muted">View and track all your submitted claims</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Total Claims</h6>
                    <h3 class="fw-bold mb-0">@Model.TotalClaims</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Pending</h6>
                    <h3 class="fw-bold mb-0 text-warning">@Model.PendingClaims</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Approved</h6>
                    <h3 class="fw-bold mb-0 text-success">@(Model.Claims.Count(c => c.Status == "Approved"))</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Total Approved</h6>
                    <h3 class="fw-bold mb-0 text-success">R @Model.TotalApprovedAmount.ToString("N2")</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0 fw-semibold">All Claims</h5>
                </div>
                <div class="col-auto">
                    <form method="get" class="d-flex gap-2">
                        <select name="status" class="form-select" onchange="this.form.submit()">
                            <option value="">All Status</option>
                            <option value="Pending" selected="@(Model.StatusFilter == "Pending")">Pending</option>
                            <option value="Approved" selected="@(Model.StatusFilter == "Approved")">Approved</option>
                            <option value="Rejected" selected="@(Model.StatusFilter == "Rejected")">Rejected</option>
                        </select>
                        <a asp-action="Submit" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-1"></i>New Claim
                        </a>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Claims.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Claim ID</th>
                                <th>Submission Date</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.Claims)
                            {
                                <tr>
                                    <td class="fw-semibold">#@claim.ClaimId</td>
                                    <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>R @claim.HourlyRate.ToString("N2")</td>
                                    <td class="fw-bold">R @claim.TotalAmount.ToString("N2")</td>
                                    <td>
                                        <span class="@claim.StatusBadgeClass">
                                            @claim.Status
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@claim.ClaimId"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye me-1"></i>View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <p class="text-muted mt-3">No claims found</p>
                    <a asp-action="Submit" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Submit Your First Claim
                    </a>
                </div>
            }
        </div>
    </div>
</div>