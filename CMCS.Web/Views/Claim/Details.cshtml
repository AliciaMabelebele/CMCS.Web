@model CMCS.Web.Models.ViewModels.ClaimDetailsViewModel
@{
    ViewData["Title"] = $"Claim #{Model.Claim.ClaimId}";
}

<div class="container mt-4 mb-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="bi bi-file-text me-2"></i>Claim #@Model.Claim.ClaimId
                        </h3>
                        <span class="@Model.Claim.StatusBadgeClass fs-5">
                            @Model.Claim.Status
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-person me-2"> </i>Lecturer Information
                    </h5>
                    <div class="row mb-3">
                        <div class="col-md-4 text-muted">Name:</div>
                        <div class="col-md-8 fw-semibold">@Model.Claim.Lecturer?.FullName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 text-muted">Email:</div>
                        <div class="col-md-8">@Model.Claim.Lecturer?.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 text-muted">Department:</div>
                        <div class="col-md-8">@Model.Claim.Lecturer?.Department</div>
                    </div>
                    <hr class="my-4">

                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-file-earmark-text me-2"></i>Claim Details
                    </h5>
                    <div class="row mb-3">
                        <div class="col-md-4 text-muted">Submission Date:</div>
                        <div class="col-md-8 fw-semibold">@Model.Claim.SubmissionDate.ToString("dd MMMM yyyy")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 text-muted">Hours Worked:</div>
                        <div class="col-md-8">@Model.Claim.HoursWorked hours</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 text-muted">Hourly Rate:</div>
                        <div class="col-md-8">R @Model.Claim.HourlyRate.ToString("N2")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 text-muted">Total Amount:</div>
                        <div class="col-md-8">
                            <h4 class="text-success fw-bold mb-0">R @Model.Claim.TotalAmount.ToString("N2")</h4>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 text-muted align-self-start">Notes:</div>
                        <div class="col-md-8">
                            <div class="bg-light p-3 rounded">
                                @(string.IsNullOrEmpty(Model.Claim.Notes) ? "No notes provided" : Model.Claim.Notes)
                            </div>
                        </div>
                    </div>
                    <hr class="my-4">

                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-paperclip me-2"></i>Supporting Documents
                    </h5>
                    @if (Model.Claim.Documents.Any())
                    {
                        <div class="list-group">
                            @foreach (var doc in Model.Claim.Documents)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="@doc.FileIcon me-2"></i>
                                        <strong>@doc.FileName</strong>
                                        <br>
                                        <small class="text-muted">
                                            Uploaded: @doc.UploadDate.ToString("dd MMM yyyy") • @doc.FileSizeFormatted
                                        </small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>No documents attached to this claim
                        </div>
                    }

                    @if (Model.Claim.Status != "Pending")
                    {
                        <hr class="my-4">
                        <h5 class="fw-bold mb-3">
                            <i class="bi bi-check-circle me-2"></i>Review Information
                        </h5>
                        <div class="alert @(Model.Claim.Status == "Approved" ? "alert-success" : "alert-danger")">
                            @if (Model.Claim.Status == "Approved")
                            {
                                <p class="mb-0">
                                    <i class="bi bi-check-circle-fill me-2"></i>
                                    <strong>Approved by:</strong> @Model.Claim.ApprovedBy<br>
                                    <strong>Approval Date:</strong> @Model.Claim.ApprovalDate?.ToString("dd MMMM yyyy")
                                </p>
                            }
                            else
                            {
                                <p class="mb-2">
                                    <i class="bi bi-x-circle-fill me-2"></i>
                                    <strong>Rejected by:</strong> @Model.Claim.ApprovedBy<br>
                                    <strong>Rejection Date:</strong> @Model.Claim.ApprovalDate?.ToString("dd MMMM yyyy")
                                </p>
                                <p class="mb-0">
                                    <strong>Reason:</strong> @Model.Claim.RejectionReason
                                </p>
                            }
                        </div>
                    }
                </div>

                <div class="card-footer bg-white py-3">
                    @if (Model.CanApprove || Model.CanReject)
                    {
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Review" asp-action="Pending" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Review
                            </a>
                            <div>
                                <button type="button" class="btn btn-danger me-2" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                    <i class="bi bi-x-circle me-2"></i>Reject
                                </button>
                                <form asp-controller="Review" asp-action="Approve" asp-route-id="@Model.Claim.ClaimId"
                                      method="post" class="d-inline">
                                    <button type="submit" class="btn btn-success"
                                            onclick="return confirm('Are you sure you want to approve this claim?')">
                                        <i class="bi bi-check-circle me-2"></i>Approve
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Review" asp-action="Reject" asp-route-id="@Model.Claim.ClaimId" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Reject Claim</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="reason" class="form-label fw-semibold">Rejection Reason *</label>
                        <textarea name="reason" id="reason" class="form-control" rows="4"
                                  placeholder="Please provide a detailed reason for rejection..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-x-circle me-2"></i>Reject Claim
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
